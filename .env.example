# ============================================
# PokeUK DealScout - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# --------------------------------------------
# Database Configuration
# --------------------------------------------
# PostgreSQL connection (matches docker-compose.yml defaults)
DATABASE_URL=postgresql+asyncpg://pokeuk:pokeuk_dev_password@localhost:5432/pokeuk_dealscout

# Redis connection for caching live deals
REDIS_URL=redis://localhost:6379/0

# --------------------------------------------
# eBay API Credentials (Required for eBay deals)
# --------------------------------------------
# Register at: https://developer.ebay.com/
# You need a Production App with Browse API access
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id
EBAY_OAUTH_TOKEN=your_oauth_token
EBAY_REFRESH_TOKEN=your_refresh_token

# --------------------------------------------
# Pokemon TCG API (Optional)
# --------------------------------------------
# Register at: https://pokemontcg.io/
# Free tier: 1000 requests/day, 30 requests/minute
# Used for card images and set data
POKEMON_TCG_API_KEY=

# --------------------------------------------
# Proxy Configuration (Required for scraping)
# --------------------------------------------
# Recommended: UK-based rotating residential proxies
# Services: Bright Data, Oxylabs, SmartProxy
PROXY_ENABLED=false
PROXY_SERVICE_URL=
PROXY_API_KEY=
PROXY_COUNTRY=GB

# --------------------------------------------
# Application Settings
# --------------------------------------------
# How often to refresh deal data (seconds)
REFRESH_INTERVAL_SECONDS=60

# Minimum deal score to display (percentage)
DEAL_SCORE_MINIMUM=15

# Price filters (GBP) - avoid bulk listing clutter
PRICE_FLOOR_GBP=10
PRICE_CEILING_GBP=10000

# --------------------------------------------
# Scraper Settings
# --------------------------------------------
# Enable/disable individual sources
SCRAPER_EBAY_ENABLED=true
SCRAPER_CARDMARKET_ENABLED=true
SCRAPER_VINTED_ENABLED=false
SCRAPER_FACEBOOK_ENABLED=false
SCRAPER_MAGICMADHOUSE_ENABLED=true
SCRAPER_CHAOSCARDS_ENABLED=true

# Request delays to avoid rate limiting (milliseconds)
SCRAPER_REQUEST_DELAY_MS=1000
SCRAPER_MAX_RETRIES=3

# --------------------------------------------
# Frontend Configuration
# --------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# --------------------------------------------
# Logging & Debug
# --------------------------------------------
LOG_LEVEL=INFO
DEBUG=false
